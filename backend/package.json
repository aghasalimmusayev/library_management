{
  "name": "library-management-backend",
  "version": "1.0.0",
  "description": "Library Management System Backend - Student Exercise",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:setup": "psql -U postgres -d library_db -f schema.sql",
    "db:create": "createdb library_db",
    "db:drop": "dropdb library_db",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:setup"
  },
  "keywords": ["library", "management", "express", "postgresql"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
